<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9" >
        
        <ImageView android:id="@+id/profile_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_stamp_icon"
            android:clickable="true"
            android:onClick="upload_profile_picture" />
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_picture"
            android:layout_centerVertical="true"
            android:padding="10dp" >
            
            <TextView android:id="@+id/collection_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/title"
		            android:textSize="18sp"
		            android:textColor="#FF6300AB"
		            android:textStyle="bold" />
		        
		        <TextView android:id="@+id/collection_username"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@id/collection_title"
		            android:text="@string/username"
		            android:textSize="15sp"
		            android:textColor="#232323" /> 
            
        </RelativeLayout>
        
    </RelativeLayout>
    
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >
        
        <ImageView android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_stamp_icon" />
        
        <ImageView android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_book_icon" />
        
        <ImageView android:id="@+id/item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_media_icon" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >
        
        <ImageView android:id="@+id/item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_electronic_icon" />
        
        <ImageView android:id="@+id/item5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_coin_icon" />
        
        <ImageView android:id="@+id/item6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:contentDescription="@string/picture"
            android:src="@drawable/stock_card_icon" />
        
    </LinearLayout>

</LinearLayout>